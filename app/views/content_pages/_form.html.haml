=semantic_form_for(@content_page) do |form|
  =form.inputs do
    =form.input :title
    =form.input :subtitle
    =form.input :text, input_html: { class: 'redactor' }
    =form.input :link_text, hint: 'The text used in a navigation link'
    =form.input :slug, label: 'Url'
  =form.actions do
    =form.action :submit, label: 'Save'
