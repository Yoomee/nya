!!!5
%html
  %head
    %title NYA
    :plain
      <script type="text/javascript" src="//use.typekit.net/enc0qvl.js"></script>
      <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
      <link href='http://fonts.googleapis.com/css?family=Varela+Round' rel='stylesheet' type='text/css'>
    =stylesheet_link_tag("//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css")
    =stylesheet_link_tag("application")
    =javascript_include_tag("application")
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    =csrf_meta_tags
    =yield :head
  -body_tag do
    .main-wrapper
      =yield_with_bootstrap(render('layouts/header'))
      .wrapper
        =yield_with_bootstrap(yield)
      .push
    .footer-wrapper
      =yield_with_bootstrap(render('layouts/footer'))
