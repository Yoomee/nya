.container
.strip.strip-smll.relative
  .container.hero-discover.hero-holder.relative
    .col-md-8.col-md-offset-2.relative
      .usr-action-top
        =link_to('Follow', '#',  :class => 'btn btn-lg btn-gry btn-follow mr-3')
        -if can?(:edit, @forum)
          =link_to('', '',  :class => 'btn btn-lg btn-gry visible dropdown', :icon => 'cog', 'data-toggle' => 'dropdown')
          %ul.dropdown-menu.settings
            %li=link_if_can('Edit', [:edit, @forum], :icon => 'pencil')
            %li=link_if_can('Delete', [:destroy, @forum], method: :delete, confirm: 'Are you sure?', icon: 'trash-o')
      %h1.pt-4.center=@forum.name
      %p.col-md-8.col-md-offset-2.center=raw(@forum.description)

.split.section
  .container
    .col-md-8.col-md-offset-2.p-0
      %h3.col-md-12.pb-3.m-0
        Say hello to new members of the
        =@forum.name.downcase
        community
      .col-md-12.col-sm-12.col-xs-12
        %ul.new-members
          -3.times do
            %li.col-md-4.col-sm-6.col-xs-12.mb-3.relative
              .col-lg-3.col-md-4.col-sm-3.col-xs-3.avatar
                .avatar-wrap
                  =image_tag("profile-thumb.png")
              .col-md-8.col-lg-9
                =link_to('User', 'profile', :class=> 'large-txt')
                %p Joined 1st April 2014
                =link_to('Sheffield','category', :icon => 'map-marker')

.section
  .container
    .col-md-8.col-md-offset-2
      .row.pb-3
        .col-md-12
          %h3
            Write something about
            =@forum.name
        .col-md-12.main-input
          =render 'posts/remote_form', post: @forum.posts.build
      .row
        .col-md-12
          %h3 Activity feed
      .row
        .col-md-12.col-sm-12.col-xs-12.photo.card.pb-3
          =render 'posts/posts', posts: @forum.posts.paginate(page: params[:page])

-if @forum.project_category.try(:projects).present?
  .section
    .container
      .col-md-8.col-md-offset-2.p-0
        .col-md-12
          %h3
            Latest projects in
            =@forum
        =render @forum.project_category.projects.recent(2)
