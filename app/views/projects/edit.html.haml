.container
=semantic_form_for @project do |f|
  =f.inputs do
    .section-pattern
      .container
        .row.pv-10
          .col-sm-12.relative
            .row
              .col-md-8
                %h3.m0 Journey name
                %p
                  %em.small Enter a catchy title for your Journey.
              .i-input.col-md-8
                %i.fa.fa-book
                =f.input :title, label: false, placeholder: 'Project name'
            .row
              .col-md-8
                %h3.mb-0 Journey location
                %p
                  %em.small Enter the city/town where your journey is happening.
              .i-input.col-md-8
                %i.fa.fa-map-marker
                =f.input :city, label: false, placeholder: 'Location'
            .top-right
              =button_tag(type: :submit, class: 'btn btn-sm btn-primary btn-confirm') do
                Done editing
                %i.fa.fa-check

    .section-white.border-top.pv-4
      .container
        .row
          .col-md-8.col-md-offset-2
            =f.input :image, as: :image, :class => 'mb-1'
            =f.input :tag_list, label: "Tags",
             input_html: { data: { placeholder: "Enter tags",
              saved: f.object.tags.map{|t| {id: t.name,
              name: t.name}}.to_json,
              url: autocomplete_tags_path },
              class: 'autocomplete-tags' }
            %h3 What is the inspiration for your journey?
            =f.input :inspiration, label: false, hint: 'What is the issue or problem you are looking to change?', input_html: { class: "col-xs-12 form-textarea mb-3", cols: 50, rows: 10 }
            %h3 Who will you be helping?
            =f.input :who_helping, label: false, hint: 'What community are you hoping to assist with your idea', input_html: { class: "col-xs-12 form-textarea mb-3", cols: 50, rows: 10 }
            %h3 How will you help?
            =f.input :how_helping, label: false, hint: 'Describe the activities you are planning to make the change happen', input_html: { class: "col-xs-12 form-textarea mb-3", cols: 50, rows: 10 }
            %h3 What skills do you already have?
            =f.input :skills_have, label: false, hint: "List the skills and resources that you already have to use", input_html: { class: "col-xs-12 form-textarea mb-3", cols: 50, rows: 10 }
            %h3 What skills do you need help with?
            =f.input :skills_needed, label: false, hint: "List the skills and resources that you need help with", input_html: { class: "col-xs-12 form-textarea mb-3", cols: 50, rows: 10 }
            %h3 What are the steps you will take?'
            =f.input :step1, label: false, hint: 'Step 1'
            =f.input :step2, label: false, hint: 'Step 2'
            =f.input :step3, label: false, hint: 'Step 3'
            =f.input :step4, label: false, hint: 'Step 4'
            =f.input :step5, label: false, hint: 'Step 5'
            %h3 Journey deadline
            =f.input :deadline, as: :string, label: false, input_html: { class: "form-text hasdatepicker col-xs-12 mb-4" }
            -if current_user.admin?
              .mb-4
                %h3 Featured?
                =f.input :feature_on_homepage
                =f.input :feature_on_community_homepage

            =button_tag(type: :submit, class: 'btn btn-sm col-xs-12 btn-primary btn-confirm') do
              Done editing
              %i.fa.fa-check
