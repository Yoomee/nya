      %ul.form-tabs
        %li.active=link_to('My project', '#myproject', 'data-toggle' => 'tab')
        %li=link_to('Preview', '#preview', 'data-toggle' => 'tab')
        .clearfix

      .form-container
        .tab-content
          #myproject.tab-pane.active
