.container
.strip-header.pt-7.pb-10.relative
  .container
    .row
      .col-md-12.center
        %h1 Welcome

.container
  .row.negative-top.mb-6
    .col-sm-6.col-sm-offset-3
      %ul.form-tabs
        %li=link_to('Sign in', '#signin', 'data-toggle' => 'tab')
        %li.active=link_to('Sign up', '#signup', 'data-toggle' => 'tab')
        .clearfix

      .form-container
        .tab-content
          #signin.tab-pane
            .p3
              %input.form-input.mb-2{'placeholder' => 'Username or email'}
              %input.form-input.mb-1{'placeholder' => 'Password'}
              =link_to('Forgot your password?', '#', :class => 'small pull-right')
              .clearfix
            =link_to('Sign in', '#', :class => 'form-input-btn btn-block')

          #signup.tab-pane.active
            .p3
              .progress
                .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", role: "progressbar", style: "width: 20%;"}
                  %span.sr-only 20% Complete
              %input.form-input.mb-2{'placeholder' => 'Username'}
              %input.form-input.mb-2{'placeholder' => 'Email'}
              %input.form-input{'placeholder' => 'Password'}
            =link_to('Sign up', '#', :class => 'form-input-btn btn-block')
