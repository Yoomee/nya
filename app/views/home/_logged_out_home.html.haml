              %span Music
          %li
            =link_to('#travel', 'data-toggle' => 'tab') do
              %span Travel
#project-tabs-content.p-tb.section
  .container
    .row
      .tab-content
        #food.tab-pane.active.fade.in
          -3.times do
            .col-md-4.col-sm-12.col-xs-12.card.pb-3
              .card-wrap
                .card-top
                  %time{datetime: "2009-11-13"}
                  13
                  %sup th
                  September 2014
                .image-wrapper
                  =link_to 'project' do
                    =image_placeholder('360x207#')
                .card-info.col-md-12
                  %h3.project-title
                    =link_to('Food project', 'project')
                  %span.author 
                    by
                    =link_to('User', 'profile')
                  %p This is an excerpt of the project maximum of 150 chars
                  .card-tags.col-md-10.p-0
                    %ul.tags
                      %li=link_to('Cake decoration', 'category')
                      %li=link_to('Baking', 'category')
                  .card-likes.col-md-2.right.p-0
                    =link_to('3', '#', :class => 'likes', :icon => 'heart')
                .card-footer
                  .foot-link.location.col-md-6.col-xs-6
                    =link_to('Sheffield', 'category', :icon => 'map-marker')
                  .foot-link.helpers.col-md-6.col-xs-6.right
                    =link_to('2 helpers', 'category', :icon => 'users')
          =link_to('Show all 56 projects in food', 'category', :class => 'all-link pull-right')
        #sport.tab-pane.fade.in
          -3.times do
            .col-md-4.col-sm-12.col-xs-12.card.pb-3
              .card-wrap
                .card-top
                  %time{datetime: "2009-11-13"}
                  13
                  %sup th
                  November 2014
                .image-wrapper
                  =link_to 'project' do
                    =image_placeholder('360x207#')
                .card-info.col-md-12
                  %h3.project-title
                    =link_to('Sport Project', 'project')
                  %span.author 
                    by
                    =link_to('User', 'profile')
                  %p This is an excerpt of the project maximum of 150 chars
                  .card-tags.col-md-10.p-0
                    %ul.tags
                      %li=link_to('Sport', 'category')
                      %li=link_to('Ice Skating', 'category')
                  .card-likes.col-md-2.right.p-0
                    =link_to('3', '#', :class => 'likes', :icon => 'heart')
                .card-footer
                  .foot-link.location.col-md-6.col-xs-6
                    =link_to('Sheffield', 'category', :icon => 'map-marker')
                  .foot-link.helpers.col-md-6.col-xs-6.right
                    =link_to('2 helpers', 'category', :icon => 'users')
          =link_to('Show all 56 projects in sport', 'category', :class => 'all-link pull-right')
