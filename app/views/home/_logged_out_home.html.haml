#project-tabs.section.p-0
  .container
    .row
      .col-md-12
        %ul.nav.nav-tabs.carousel-tabs
          %li.active
            =link_to('#food', 'data-toggle' => 'tab') do
              %span Food
          %li
            =link_to('#sport', 'data-toggle' => 'tab') do
              %span Sport
          %li
            =link_to('#digital', 'data-toggle' => 'tab') do
              %span Digital
          %li
            =link_to('#art', 'data-toggle' => 'tab') do
              %span Art
          %li
